<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/order_history_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:ignore="ExtraText">
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
    android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/orderIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Họ tên:"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Nguyễn Văn A"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Số điện thoại:"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/orderNumberPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Số điện thoại: 0123455678"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Thực đơn:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/orderMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thực đơn"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ngày đặt:"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/orderDateTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22-22-2222, 22:22:22"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="2dp"
        android:background="#FF0000" />
    />
    <TextView
        android:id="@+id/thanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiền mặt"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/orderTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 222.222K"
        android:textStyle="bold|italic"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>
</LinearLayout>

